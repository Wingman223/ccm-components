{
	"component" : {
		"postbox" : {
			"tag" 	: "div",
			"class" : "postbox",
			"inner" : [
				{
					"tag" 				: "div",
					"class" 			: "textarea placeholder",
					"contenteditable" 	: "true",
					"rows" 				: "2",
					"cols" 				: "18",
					"inner" 			: "%POSTBOX_INSERTCOMMENT%",
					"onclick"			: "%onPostboxTextareaClick%"
				},
				{
					"tag" 	: "section",
					"class" : "form-submit",
					"inner" : [
						{
							"tag" 	: "p",
							"class" : "test2",
							"inner" : [
								{
									"tag" 		: "input",
									"type" 		: "submit",
									"class" 	: "submit-button",
									"inner" 	: "%POSTBOX_SEND%",
									"onclick"	: "%onPostboxButtonSubmitClick%"
								}
							]
						}, 
						{
							"tag" 	: "p",
							"inner" : [
								{
									"tag" 	: "label",
									"inner" : [
										{
											"tag" 	: "input",
											"type" 	: "checkbox",
											"name" 	: "anonymous"
										},
										{
											"tag" 	: "span",
											"inner" : "&nbsp;"
										},
										{
											"tag" 	: "span",
											"inner" : "%POSTBOX_USER_GUEST%"
										}
									]
								}
							]
						}
					]
				}
			]
		},
		"comment" : {
			"tag" 	: "div",
			"class" : "comment",
			"inner" : [
				{
					"tag" 	: "div",
					"class" : "meta",
					"inner" : [
						{
							"tag" 	: "span",
							"class" : "header h4",
							"inner" : "%name%"
						}, {
							"tag" 	: "span",
							"class" : "spacer",
							"inner" : "â€¢"
						}, {
							"tag" 	: "span",
							"inner" : "%date%"
						}
					]
				},
				{
					"tag" 	: "div",
					"class" : "text",
					"inner" : "%text%"
				},
				{
					"tag" 	: "div",
					"class" : "footer",
					"inner" : [
						{
							"tag" 		: "a",
							"class" 	: "reply",
							"href" 		: "#",
							"inner" 	: "%COMMENT_BUTTON_REPLY%",
							"onclick" 	: "%onCommentButtonReplyClick%"
						}
					]
				},
				{
					"tag" 	: "div",
					"class" : "followup",
					"inner" : []
				}
			]
		}
	},
	"main" : {
		"tag" 	: "section",
		"inner" : [
			{
				"tag" 	: "h1",
				"inner" : "%number% %HEADER_NUM_COMMENTS%"
			},
			{
				"tag" 	: "div",
				"class" : "comments",
				"inner" : []
			}
		]
	}
}
